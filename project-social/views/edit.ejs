<%include ./partials/header.ejs%>
<div
  class="w-full min-h-screen bg-zinc-800 flex flex-col justify-center items-center"
>
  <h1 class="text-xl font-medium leading-6 text-gray-100 mb-10 underline">
    Edit your details
  </h1>
  <form action="/edit" method="post">
    <div>
      <label
        class="block text-xl font-medium leading-6 text-gray-400"
        for="username"
        >Username</label
      >
      <input
        type="text"
        name="username"
        class="block w-120 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 mb-10"
      />
    </div>
    <label for="name" class="block text-xl font-medium leading-6 text-gray-400"
      >Name</label
    >
    <input
      type="text"
      name="name"
      class="block w-120 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
    />
    <button
      id="btn-submit"
      type="submit"
      class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-10"
    >
      Edit 
    </button>
  </form>
</div>
<%include ./partials/footer.ejs%>
