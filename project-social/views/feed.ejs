<% include ./partials/header.ejs%> 
<% include ./partials/nav.ejs%>
<div class="w-full min-h-screen bg-zinc-800">
  <div class="container mx-auto py-5">
    <% posts.forEach(post => { %>

    <div class="bg-gray-500 p-4 rounded-lg shadow-md mx-auto mb-8 max-w-md">
      <!-- User Profile Section -->
      <div class="flex items-center mb-4">
        <img
          src="/images/uploads/<%= post.user.profileImage %>"
          alt="User Profile Image"
          class="w-8 h-8 rounded-full mr-2"
        />
        <div>
          <h2 class="text-sm font-bold"><%= post.user.username %></h2>
        </div>
      </div>

      <!-- Post Details Section -->
      <div>
        <h1 class="text-lg font-bold mb-2"><%= post.title %></h1>
        <!-- Display Post Image -->
        <a href="/post/<%= post._id %>">
          <img
            src="/images/uploads/<%= post.image %>"
            alt="<%= post.title %> Image"
            class="w-full mb-2 rounded-md shadow-md"
          />
        </a>
        <p class="text-gray-700 mb-2"><%= post.description %></p>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% include ./partials/footer.ejs%>
