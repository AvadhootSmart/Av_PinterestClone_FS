<%include ./partials/header.ejs%>
<%include ./partials/nav.ejs%>
<div class="bg-zinc-800 min-h-screen p-8">
  <div class="bg-gray-400 p-8 rounded-lg shadow-md max-w-2xl mx-auto">
    <!-- User Profile Section -->
    <div class="flex items-center mb-6">
      <img
        src="/images/uploads/<%= postData.user.profileImage %>"
        alt="User Profile Image"
        class="w-12 h-12 rounded-full mr-4"
      />
      <div>
        <h2 class="text-lg font-bold"><%= postData.user.username %></h2>
      </div>
    </div>

    <!-- Post Details Section -->
    <div>
      <h1 class="text-3xl font-bold mb-4"><%= postData.title %></h1>
      <!-- Display Post Image -->
      <img
        src="/images/uploads/<%= postData.image %>"
        alt="<%= postData.title %> Image"
        class="w-full mb-4 rounded-md shadow-md"
      />

      <p class="text-gray-700 mb-4"><%= postData.description %></p>
    </div>
  </div>
</div>

<%include ./partials/footer.ejs%>
